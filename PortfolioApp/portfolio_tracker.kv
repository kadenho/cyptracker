<AddPortfolioEntryScreen>
    Label:
        text: 'Add Portfolio Entry'
        pos_hint: {'center': (0.5, 0.9)}
        size_hint: (1.0,0.1)
        font_size: 24
        text_size: self.size
        halign: 'center'
        valign: 'middle'

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,0.8)
        pos_hint: {'center': (0.5,0.4)}
