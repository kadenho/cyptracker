<Button>
    canvas.before:
        Color:
            rgb: self.background_color
        SmoothRoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]
    background_color: app.button_color
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<SpinnerOption>
    background_color: app.button_color

<TextInput>
    write_tab: False
    multiline: False

<Screen>
    canvas.before:
        Color:
            rgba: app.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    on_enter:
        self.reset_page()
    on_leave:
        self.reset_page()

<Label>
    font_size: 24
    outline_width: 2
    outline_color: app.outline_color
    color: app.text_color
